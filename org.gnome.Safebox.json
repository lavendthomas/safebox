{
    "app-id": "org.gnome.Safebox",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.32",
    "sdk": "org.gnome.Sdk",
    "command": "safebox",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
         "udev/systemd-udev.json",
         {
            "name" : "libusb",
            "config-opts" : [
                "--disable-udev"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/libusb/libusb/releases/download/v1.0.22/libusb-1.0.22.tar.bz2",
                    "sha256" : "75aeb9d59a4fdb800d329a545c2e6799f732362193b465ea198f2aa275518157"
                }
            ]
        },
        {
            "name" : "libfuse",
            "config-opts" : [
                "UDEV_RULES_PATH=/app/etc/udev/rules.d",
                "INIT_D_PATH=/app/etc/init.d"
            ],
            "post-install": [
                "install -m a+rx fusermount-wrapper.sh /app/bin/fusermount"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/libfuse/libfuse/releases/download/fuse-2.9.9/fuse-2.9.9.tar.gz",
                    "sha256" : "d0e69d5d608cc22ff4843791ad097f554dd32540ddc9bed7638cc6fea7c1b4b5"
                },
                {
                    "type" : "patch",
                    "path" : "fuse-2.9.2-namespace-conflict-fix.patch"
                },
                {
                    "type" : "patch",
                    "path" : "fuse-disable-sys-mount-under-flatpak.patch"
                },
                {
                    "type" : "file",
                    "path" : "fusermount-wrapper.sh"
                }
            ]
        },
        {
             "name": "encfs",
             "only-arches": [
               "x86_64"
             ],
             "buildsystem": "cmake",
             "build-commands": [
               "ls -a /app/lib",
               "mkdir build",
               "cd build",
               "cmake . -DCMAKE_INSTALL_PREFIX=/app/bin",
               "make",
               "make install"
             ],
             "sources": [{
                 "type": "archive",
                 "url": "https://github.com/vgough/encfs/releases/download/v1.9.5/encfs-1.9.5.tar.gz",
                 "sha256": "4709f05395ccbad6c0a5b40a4619d60aafe3473b1a79bafb3aa700b1f756fd63"
             }]
        },
        {
            "name": "safebox",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "file:///home/thomas/Projects/safebox"
                }
            ]
        }
    ]
}
